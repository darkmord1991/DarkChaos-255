		},
		{
			"label": "AzerothCore: Sync changed + Build",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"apps/git_tools/sync-and-build.ps1",
				"-RemoteUser",
				"${input:remoteUser}",
				"-RemotePassword",
				"${input:remotePassword}",
				"-RemoteRepoPath",
				"${input:remoteRepoPath}",
				"-HostKey",
				"${input:remoteHostKey}"
			],
			"group": {
				"kind": "build",
				"isDefault": true

				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "AzerothCore: Sync changed + Build",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"apps/git_tools/luac-check-wrapper.ps1",
				"-NoExit",
				"powershell",
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"apps/git_tools/ssh-sync-and-build.ps1",
				"-RemoteUser",
				"${input:remoteUser}",
				"-RemoteHost",
				"${input:remoteHost}",
				"-RemoteRepoPath",
				"${input:remoteRepoPath}",
				"-PrivateKeyPath",
				"${input:sshKeyPath}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},

<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <!-- Main Item Upgrade Frame -->
    <Frame name="DarkChaos_ItemUpgradeFrame" toplevel="true" frameStrata="HIGH" movable="true" enableMouse="true" hidden="true" parent="UIParent">
        <Size>
            <AbsDimension x="800" y="600"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
        </Backdrop>
        <Layers>
            <Layer level="ARTWORK">
                <Texture name="$parentPortrait" file="Interface\Icons\INV_Misc_Gear_01">
                    <Size>
                        <AbsDimension x="60" y="60"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="10" y="-10"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Item Upgrade">
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="-18"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <!-- Close Button -->
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-5" y="-5"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>

            <!-- Item Selection Area -->
            <Frame name="$parentItemSlot" inherits="ItemButtonTemplate">
                <Size>
                    <AbsDimension x="60" y="60"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="30" y="-80"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        this:RegisterForClicks("LeftButtonUp", "RightButtonUp");
                        this:RegisterForDrag("LeftButton");
                    </OnLoad>
                    <OnClick>
                        DarkChaos_ItemUpgrade_OnItemSlotClick();
                    </OnClick>
                    <OnReceiveDrag>
                        DarkChaos_ItemUpgrade_OnItemSlotReceiveDrag();
                    </OnReceiveDrag>
                </Scripts>
            </Frame>

            <!-- Item Name -->
            <FontString name="$parentItemName" inherits="GameFontNormalLarge" justifyH="LEFT">
                <Size>
                    <AbsDimension x="300" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentItemSlot" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="10" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </FontString>

            <!-- Item Level -->
            <FontString name="$parentItemLevel" inherits="GameFontNormal" justifyH="LEFT">
                <Size>
                    <AbsDimension x="300" y="16"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentItemName" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="0" y="-2"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </FontString>

            <!-- Current Upgrade Level -->
            <FontString name="$parentCurrentLevel" inherits="GameFontNormal" justifyH="LEFT" text="Upgrade Level:">
                <Size>
                    <AbsDimension x="150" y="16"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentItemLevel" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="0" y="-10"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </FontString>

            <FontString name="$parentCurrentLevelValue" inherits="GameFontHighlight" justifyH="LEFT">
                <Size>
                    <AbsDimension x="100" y="16"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentCurrentLevel" relativePoint="RIGHT">
                        <Offset>
                            <AbsDimension x="5" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </FontString>

            <!-- Upgrade Level Slider -->
            <Slider name="$parentUpgradeSlider" inherits="OptionsSliderTemplate">
                <Size>
                    <AbsDimension x="200" y="17"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentCurrentLevel" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="0" y="-20"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        this:SetMinMaxValues(0, 15);
                        this:SetValueStep(1);
                        this:SetValue(0);
                        getglobal(this:GetName().."Text"):SetText("Target Level: 0");
                        getglobal(this:GetName().."Low"):SetText("0");
                        getglobal(this:GetName().."High"):SetText("15");
                    </OnLoad>
                    <OnValueChanged>
                        DarkChaos_ItemUpgrade_OnSliderValueChanged();
                    </OnValueChanged>
                </Scripts>
            </Slider>

            <!-- Cost Display -->
            <Frame name="$parentCostFrame">
                <Size>
                    <AbsDimension x="300" y="100"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentUpgradeSlider" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="0" y="-30"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
                    <BackgroundInsets>
                        <AbsInset left="4" right="4" top="4" bottom="4"/>
                    </BackgroundInsets>
                    <TileSize>
                        <AbsValue val="16"/>
                    </TileSize>
                    <EdgeSize>
                        <AbsValue val="16"/>
                    </EdgeSize>
                </Backdrop>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentTitle" inherits="GameFontNormal" text="Upgrade Cost" justifyH="CENTER">
                            <Size>
                                <AbsDimension x="280" y="16"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOP">
                                    <Offset>
                                        <AbsDimension x="0" y="-8"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentEssenceCost" inherits="GameFontNormal" justifyH="LEFT">
                            <Size>
                                <AbsDimension x="280" y="16"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
                                    <Offset>
                                        <AbsDimension x="10" y="-5"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentTokenCost" inherits="GameFontNormal" justifyH="LEFT">
                            <Size>
                                <AbsDimension x="280" y="16"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeTo="$parentEssenceCost" relativePoint="BOTTOMLEFT">
                                    <Offset>
                                        <AbsDimension x="0" y="-2"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <!-- Stats Display -->
            <Frame name="$parentStatsFrame">
                <Size>
                    <AbsDimension x="300" y="150"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentCostFrame" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="0" y="-20"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
                    <BackgroundInsets>
                        <AbsInset left="4" right="4" top="4" bottom="4"/>
                    </BackgroundInsets>
                    <TileSize>
                        <AbsValue val="16"/>
                    </TileSize>
                    <EdgeSize>
                        <AbsValue val="16"/>
                    </EdgeSize>
                </Backdrop>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentTitle" inherits="GameFontNormal" text="Item Stats" justifyH="CENTER">
                            <Size>
                                <AbsDimension x="280" y="16"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOP">
                                    <Offset>
                                        <AbsDimension x="0" y="-8"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentCurrentStats" inherits="GameFontNormal" justifyH="LEFT" text="Current Stats:">
                            <Size>
                                <AbsDimension x="280" y="12"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
                                    <Offset>
                                        <AbsDimension x="10" y="-8"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentCurrentStatsValue" inherits="GameFontHighlightSmall" justifyH="LEFT">
                            <Size>
                                <AbsDimension x="260" y="60"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeTo="$parentCurrentStats" relativePoint="BOTTOMLEFT">
                                    <Offset>
                                        <AbsDimension x="0" y="-2"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentUpgradedStats" inherits="GameFontNormal" justifyH="LEFT" text="After Upgrade:">
                            <Size>
                                <AbsDimension x="280" y="12"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeTo="$parentCurrentStatsValue" relativePoint="BOTTOMLEFT">
                                    <Offset>
                                        <AbsDimension x="0" y="-8"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentUpgradedStatsValue" inherits="GameFontHighlightSmall" justifyH="LEFT">
                            <Size>
                                <AbsDimension x="260" y="60"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeTo="$parentUpgradedStats" relativePoint="BOTTOMLEFT">
                                    <Offset>
                                        <AbsDimension x="0" y="-2"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <!-- Upgrade Button -->
            <Button name="$parentUpgradeButton" inherits="UIPanelButtonTemplate" text="Upgrade Item">
                <Size>
                    <AbsDimension x="120" y="25"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset>
                            <AbsDimension x="-20" y="20"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        DarkChaos_ItemUpgrade_OnUpgradeClick();
                    </OnClick>
                </Scripts>
            </Button>

            <!-- Cancel Button -->
            <Button name="$parentCancelButton" inherits="UIPanelButtonTemplate" text="Cancel">
                <Size>
                    <AbsDimension x="80" y="25"/>
                </Size>
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="$parentUpgradeButton" relativePoint="LEFT">
                        <Offset>
                            <AbsDimension x="-10" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        DarkChaos_ItemUpgradeFrame:Hide();
                    </OnClick>
                </Scripts>
            </Button>

            <!-- Inventory Frame for Item Selection -->
            <Frame name="$parentInventoryFrame" hidden="true">
                <Size>
                    <AbsDimension x="400" y="400"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="-10" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
                    <BackgroundInsets>
                        <AbsInset left="11" right="12" top="12" bottom="11"/>
                    </BackgroundInsets>
                    <TileSize>
                        <AbsValue val="32"/>
                    </TileSize>
                    <EdgeSize>
                        <AbsValue val="32"/>
                    </EdgeSize>
                </Backdrop>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentTitle" inherits="GameFontNormal" text="Select Item to Upgrade" justifyH="CENTER">
                            <Anchors>
                                <Anchor point="TOP">
                                    <Offset>
                                        <AbsDimension x="0" y="-15"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <!-- Item buttons will be created dynamically -->
                </Frames>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad>
                DarkChaos_ItemUpgrade_OnLoad();
            </OnLoad>
            <OnHide>
                DarkChaos_ItemUpgrade_OnHide();
            </OnHide>
        </Scripts>
    </Frame>

</Ui>
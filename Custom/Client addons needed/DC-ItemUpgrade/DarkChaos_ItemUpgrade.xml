<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

    <Frame name="DarkChaos_ItemUpgradeFrame" toplevel="true" frameStrata="HIGH" movable="true" enableMouse="true" hidden="true" parent="UIParent">
        <Size>
            <AbsDimension x="720" y="520"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER">
                <Offset>
                    <AbsDimension x="-200" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
        </Backdrop>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentTitle" inherits="GameFontNormalLarge" text="Item Upgrade" justifyH="CENTER">
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="-18"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <Color r="1.0" g="0.82" b="0" a="1.0"/>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-2" y="-2"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>

            <Frame name="$parentHeader">
                <Size>
                    <AbsDimension x="680" y="130"/>
                </Size>
                <Anchors>
                    <Anchor point="TOP">
                        <Offset>
                            <AbsDimension x="0" y="-36"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentItemName" inherits="GameFontNormalHuge" justifyH="LEFT">
                            <Size>
                                <AbsDimension x="420" y="24"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset>
                                        <AbsDimension x="96" y="-6"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentItemDetails" inherits="GameFontHighlight" justifyH="LEFT">
                            <Size>
                                <AbsDimension x="420" y="16"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeTo="$parentItemName" relativePoint="BOTTOMLEFT">
                                    <Offset>
                                        <AbsDimension x="0" y="-4"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentCurrentLevel" inherits="GameFontHighlightSmall" justifyH="LEFT">
                            <Size>
                                <AbsDimension x="420" y="14"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeTo="$parentItemDetails" relativePoint="BOTTOMLEFT">
                                    <Offset>
                                        <AbsDimension x="0" y="-6"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentUpgradeLabel" inherits="GameFontNormal" text="Upgrade To:" justifyH="RIGHT">
                            <Anchors>
                                <Anchor point="TOPRIGHT">
                                    <Offset>
                                        <AbsDimension x="-205" y="-20"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <Button name="$parentItemButton" inherits="ItemButtonTemplate">
                        <Size>
                            <AbsDimension x="58" y="58"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT">
                                <Offset>
                                    <AbsDimension x="22" y="-10"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnLoad>
                                self:RegisterForDrag("LeftButton");
                                self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
                            </OnLoad>
                            <OnClick>
                                DarkChaos_ItemUpgrade_OnItemSlotClick();
                            </OnClick>
                            <OnReceiveDrag>
                                DarkChaos_ItemUpgrade_OnItemSlotReceiveDrag();
                            </OnReceiveDrag>
                            <OnEnter>
                                if self.itemLink then
                                    GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
                                    GameTooltip:SetHyperlink(self.itemLink);
                                    GameTooltip:Show();
                                end
                            </OnEnter>
                            <OnLeave>
                                GameTooltip:Hide();
                            </OnLeave>
                        </Scripts>
                    </Button>
                    <Frame name="$parentUpgradeDropdown" inherits="UIDropDownMenuTemplate">
                        <Anchors>
                            <Anchor point="TOPRIGHT">
                                <Offset>
                                    <AbsDimension x="-30" y="-38"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnShow>
                                DarkChaos_ItemUpgrade_OnUpgradeDropdownOpened();
                            </OnShow>
                        </Scripts>
                    </Frame>
                    <Button name="$parentBrowseButton" inherits="UIPanelButtonTemplate" text="Browse Items">
                        <Size>
                            <AbsDimension x="140" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPRIGHT">
                                <Offset>
                                    <AbsDimension x="-28" y="-74"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                DarkChaos_ItemUpgrade_ShowInventoryFrame();
                            </OnClick>
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>

            <Frame name="$parentCurrentPanel">
                <Size>
                    <AbsDimension x="280" y="360"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="36" y="-150"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
                    <BackgroundInsets>
                        <AbsInset left="4" right="4" top="4" bottom="4"/>
                    </BackgroundInsets>
                    <TileSize>
                        <AbsValue val="16"/>
                    </TileSize>
                    <EdgeSize>
                        <AbsValue val="16"/>
                    </EdgeSize>
                    <Color r="0" g="0" b="0" a="0.9"/>
                </Backdrop>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentTitle" inherits="GameFontNormal" text="Current" justifyH="CENTER">
                            <Anchors>
                                <Anchor point="TOP">
                                    <Offset>
                                        <AbsDimension x="0" y="-10"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                            <Color r="1.0" g="0.82" b="0" a="1.0"/>
                        </FontString>
                        <FontString name="$parentItemLevel" inherits="GameFontHighlight" justifyH="CENTER">
                            <Size>
                                <AbsDimension x="220" y="16"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOP" relativeTo="$parentTitle" relativePoint="BOTTOM">
                                    <Offset>
                                        <AbsDimension x="0" y="-8"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentUpgradeLevel" inherits="GameFontHighlightSmall" justifyH="CENTER">
                            <Size>
                                <AbsDimension x="220" y="14"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOP" relativeTo="$parentItemLevel" relativePoint="BOTTOM">
                                    <Offset>
                                        <AbsDimension x="0" y="-4"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentStatsLabel" inherits="GameFontNormal" text="Stats" justifyH="LEFT">
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset>
                                        <AbsDimension x="18" y="-68"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <ScrollFrame name="$parentStatsScroll" inherits="UIPanelScrollFrameTemplate">
                        <Size>
                            <AbsDimension x="240" y="250"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parentStatsLabel" relativePoint="BOTTOMLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="-10"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <ScrollChild>
                            <Frame name="$parentStatsScrollChild">
                                <Size>
                                    <AbsDimension x="240" y="250"/>
                                </Size>
                                <Anchors>
                                    <Anchor point="TOPLEFT"/>
                                </Anchors>
                                <Layers>
                                    <Layer level="OVERLAY">
                                        <FontString name="DarkChaos_ItemUpgradeFrameCurrentPanelStatsValue" inherits="GameFontHighlightSmall" justifyH="LEFT">
                                            <Size>
                                                <AbsDimension x="240" y="250"/>
                                            </Size>
                                            <Anchors>
                                                <Anchor point="TOPLEFT"/>
                                            </Anchors>
                                            <JustifyV>TOP</JustifyV>
                                            <Spacing>2</Spacing>
                                        </FontString>
                                    </Layer>
                                </Layers>
                            </Frame>
                        </ScrollChild>
                    </ScrollFrame>
                </Frames>
            </Frame>

            <Frame name="$parentArrowFrame">
                <Size>
                    <AbsDimension x="1" y="1"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER">
                        <Offset>
                            <AbsDimension x="0" y="-58"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <!-- Arrow hidden - retail style uses no arrow -->
            </Frame>

            <Frame name="$parentUpgradedPanel">
                <Size>
                    <AbsDimension x="320" y="360"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-36" y="-150"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
                    <BackgroundInsets>
                        <AbsInset left="4" right="4" top="4" bottom="4"/>
                    </BackgroundInsets>
                    <TileSize>
                        <AbsValue val="16"/>
                    </TileSize>
                    <EdgeSize>
                        <AbsValue val="16"/>
                    </EdgeSize>
                    <Color r="0" g="0" b="0" a="0.9"/>
                </Backdrop>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentTitle" inherits="GameFontNormal" text="Upgrade" justifyH="CENTER">
                            <Anchors>
                                <Anchor point="TOP">
                                    <Offset>
                                        <AbsDimension x="0" y="-10"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                            <Color r="0.0" g="1.0" b="0.0" a="1.0"/>
                        </FontString>
                        <FontString name="$parentItemLevel" inherits="GameFontHighlight" justifyH="CENTER">
                            <Size>
                                <AbsDimension x="260" y="16"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOP" relativeTo="$parentTitle" relativePoint="BOTTOM">
                                    <Offset>
                                        <AbsDimension x="0" y="-8"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentUpgradeLevel" inherits="GameFontHighlightSmall" justifyH="CENTER">
                            <Size>
                                <AbsDimension x="260" y="14"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOP" relativeTo="$parentItemLevel" relativePoint="BOTTOM">
                                    <Offset>
                                        <AbsDimension x="0" y="-4"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentStatsLabel" inherits="GameFontNormal" text="Stats" justifyH="LEFT">
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset>
                                        <AbsDimension x="18" y="-68"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentDeltaLabel" inherits="GameFontNormal" text="Changes:" justifyH="LEFT">
                            <Anchors>
                                <Anchor point="BOTTOMLEFT">
                                    <Offset>
                                        <AbsDimension x="18" y="28"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                            <Color r="1.0" g="0.82" b="0" a="1.0"/>
                        </FontString>
                        <FontString name="$parentDeltaValue" inherits="GameFontHighlightSmall" justifyH="LEFT">
                            <Size>
                                <AbsDimension x="280" y="64"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeTo="$parentDeltaLabel" relativePoint="BOTTOMLEFT">
                                    <Offset>
                                        <AbsDimension x="0" y="-6"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                            <JustifyV>TOP</JustifyV>
                            <MaxLines val="6"/>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <ScrollFrame name="$parentStatsScroll" inherits="UIPanelScrollFrameTemplate">
                        <Size>
                            <AbsDimension x="280" y="240"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parentStatsLabel" relativePoint="BOTTOMLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="-10"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <ScrollChild>
                            <Frame name="$parentStatsScrollChild">
                                <Size>
                                    <AbsDimension x="280" y="240"/>
                                </Size>
                                <Anchors>
                                    <Anchor point="TOPLEFT"/>
                                </Anchors>
                                <Layers>
                                    <Layer level="OVERLAY">
                                        <FontString name="DarkChaos_ItemUpgradeFrameUpgradedPanelStatsValue" inherits="GameFontHighlightSmall" justifyH="LEFT">
                                            <Size>
                                                <AbsDimension x="280" y="240"/>
                                            </Size>
                                            <Anchors>
                                                <Anchor point="TOPLEFT"/>
                                            </Anchors>
                                            <JustifyV>TOP</JustifyV>
                                            <Spacing>2</Spacing>
                                        </FontString>
                                    </Layer>
                                </Layers>
                            </Frame>
                        </ScrollChild>
                    </ScrollFrame>
                </Frames>
            </Frame>

            <Frame name="$parentFooter">
                <Size>
                    <AbsDimension x="680" y="90"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="0" y="32"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentStatusMessage" inherits="GameFontHighlightSmall" justifyH="CENTER">
                            <Size>
                                <AbsDimension x="620" y="18"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOP">
                                    <Offset>
                                        <AbsDimension x="0" y="-8"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentCostBreakdown" inherits="GameFontHighlightSmall" justifyH="CENTER">
                            <Size>
                                <AbsDimension x="520" y="14"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOP" relativeTo="$parentStatusMessage" relativePoint="BOTTOM">
                                    <Offset>
                                        <AbsDimension x="0" y="-2"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentTotalCostValue" inherits="GameFontHighlight" justifyH="CENTER">
                            <Size>
                                <AbsDimension x="520" y="16"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOP" relativeTo="$parentCostBreakdown" relativePoint="BOTTOM">
                                    <Offset>
                                        <AbsDimension x="0" y="-2"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <!-- Upgrade Button with optional custom texture support -->
            <Button name="$parentUpgradeButton" inherits="UIPanelButtonTemplate" text="Upgrade">
                <Size>
                    <AbsDimension x="160" y="22"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="-90" y="52"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND" textureSubLevel="-1">
                        <Texture name="$parentGlow" hidden="true">
                            <Size>
                                <AbsDimension x="256" y="64"/>
                            </Size>
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnClick>
                        DarkChaos_ItemUpgrade_OnUpgradeClick();
                    </OnClick>
                </Scripts>
            </Button>

            <!-- Cancel Button -->
            <Button name="$parentCancelButton" inherits="UIPanelButtonTemplate" text="Cancel">
                <Size>
                    <AbsDimension x="120" y="22"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="90" y="52"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        DarkChaos_ItemUpgradeFrame:Hide();
                    </OnClick>
                </Scripts>
            </Button>

            <!-- Cost Display Frame (positioned above buttons) -->
            <Frame name="$parentCostFrame">
                <Size>
                    <AbsDimension x="400" y="32"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="$parentUpgradeButton" relativePoint="TOP">
                        <Offset>
                            <AbsDimension x="0" y="12"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture name="$parentBG" hidden="true">
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer level="OVERLAY">
                        <FontString name="$parentText" inherits="GameFontHighlight" justifyH="CENTER">
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <!-- Inventory Browse Frame -->
            <Frame name="$parentInventoryFrame" hidden="true" enableMouse="true" movable="true">
                <Size>
                    <AbsDimension x="360" y="420"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="24" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
                    <BackgroundInsets>
                        <AbsInset left="11" right="12" top="12" bottom="11"/>
                    </BackgroundInsets>
                    <TileSize>
                        <AbsValue val="32"/>
                    </TileSize>
                    <EdgeSize>
                        <AbsValue val="32"/>
                    </EdgeSize>
                </Backdrop>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentTitle" inherits="GameFontNormal" text="Select Item to Upgrade" justifyH="CENTER">
                            <Anchors>
                                <Anchor point="TOP">
                                    <Offset>
                                        <AbsDimension x="0" y="-16"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentStatusText" inherits="GameFontHighlightSmall" justifyH="LEFT">
                            <Size>
                                <AbsDimension x="320" y="32"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset>
                                        <AbsDimension x="20" y="-52"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                        <Anchors>
                            <Anchor point="TOPRIGHT">
                                <Offset>
                                    <AbsDimension x="-2" y="-2"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                DarkChaos_ItemUpgradeFrameInventoryFrame:Hide();
                            </OnClick>
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad>
                DarkChaos_ItemUpgrade_OnLoad(self);
            </OnLoad>
            <OnHide>
                DarkChaos_ItemUpgrade_OnHide(self);
            </OnHide>
        </Scripts>
    </Frame>

</Ui>

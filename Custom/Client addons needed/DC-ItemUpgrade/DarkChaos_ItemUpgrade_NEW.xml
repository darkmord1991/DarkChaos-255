<Ui xmlns="http://www.blizzard.com/wow/ui/">
	<!-- DC-ItemUpgrade Frame - Retail-inspired item upgrade interface for 3.3.5a -->
	
	<!-- Main Frame -->
	<Frame name="DarkChaos_ItemUpgradeFrame" toplevel="true" movable="true" parent="UIParent" inherits="BasicFrameTemplate" hidden="true">
		<Size x="550" y="600"/>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<TitleRegion>
			<Anchors>
				<Anchor point="TOPLEFT" x="5" y="-5"/>
				<Anchor point="TOPRIGHT" x="-30" y="-5"/>
			</Anchors>
		</TitleRegion>
		
		<Layers>
			<Layer level="BACKGROUND">
				<!-- Background panel (dark gradient) -->
				<Texture name="$parent_BGTexture" file="Interface\DialogFrame\UI-DialogBox-Background">
					<Anchors>
						<Anchor point="FILL"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		
		<!-- Close Button -->
		<Frames>
			<Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-5" y="-5"/>
				</Anchors>
			</Button>
			
			<!-- Header: Item Selection Area -->
			<Frame name="$parent_Header" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" x="15" y="-35"/>
					<Anchor point="TOPRIGHT" x="-15" y="-35"/>
				</Anchors>
				<Size y="80"/>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture>
							<Color r="0.1" g="0.1" b="0.1" a="0.5"/>
							<Anchors>
								<Anchor point="FILL" x="-3" y="2"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				
				<!-- Item Button (displays current selected item) -->
				<Frames>
					<Button name="$parent_ItemButton" inherits="ItemButtonTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" x="5" y="-5"/>
						</Anchors>
						<Size x="56" y="56"/>
					</Button>
					
					<!-- Item Info Section -->
					<Frame name="$parent_ItemInfo">
						<Anchors>
							<Anchor point="LEFT" relativeTo="$parent_ItemButton" relativePoint="RIGHT" x="10" y="0"/>
							<Anchor point="RIGHT" x="-10" y="0"/>
						</Anchors>
						<Size y="60"/>
						<Layers>
							<Layer level="OVERLAY">
								<!-- Item Name -->
								<FontString name="$parent_ItemName" inherits="GameFontNormal" justifyH="LEFT">
									<Anchors>
										<Anchor point="TOPLEFT" x="5" y="-5"/>
										<Anchor point="RIGHT" x="-5" y="0"/>
									</Anchors>
								</FontString>
								
								<!-- Item Level Display -->
								<FontString name="$parent_ItemLevel" inherits="GameFontHighlight" justifyH="LEFT" fontSize="10">
									<Anchors>
										<Anchor point="TOPLEFT" relativeKey="$parent_ItemName" relativePoint="BOTTOMLEFT" y="-3"/>
									</Anchors>
								</FontString>
								
								<!-- Current Upgrade Status -->
								<FontString name="$parent_UpgradeStatus" inherits="GameFontHighlight" justifyH="LEFT" fontSize="10">
									<Anchors>
										<Anchor point="TOPLEFT" relativeKey="$parent_ItemLevel" relativePoint="BOTTOMLEFT" y="-3"/>
									</Anchors>
								</FontString>
								
								<!-- Browse Button -->
								<Button name="$parent_BrowseButton" inherits="UIPanelButtonTemplate">
									<Size x="80" y="22"/>
									<Anchors>
										<Anchor point="BOTTOMRIGHT" x="-5" y="5"/>
									</Anchors>
									<Text inherits="GameFontNormal">Browse Items</Text>
								</Button>
							</Layer>
						</Layers>
					</Frame>
				</Frames>
			</Frame>
			
			<!-- Comparison Panels -->
			<Frame name="$parent_ComparisonContainer">
				<Anchors>
					<Anchor point="TOPLEFT" x="15" y="-125"/>
					<Anchor point="TOPRIGHT" x="-15" y="-125"/>
				</Anchors>
				<Size y="200"/>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture>
							<Color r="0.1" g="0.1" b="0.1" a="0.5"/>
							<Anchors>
								<Anchor point="FILL" x="-3" y="2"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				
				<!-- Current Stats Panel (Left) -->
				<Frames>
					<Frame name="$parent_CurrentPanel">
						<Anchors>
							<Anchor point="TOPLEFT" x="5" y="-5"/>
							<Anchor point="BOTTOMRIGHT" relativeKey="$parent_ComparisonContainer" relativePoint="CENTER" x="-3" y="5"/>
						</Anchors>
						<Layers>
							<Layer level="OVERLAY">
								<!-- Header -->
								<FontString name="$parent_Title" inherits="GameFontHighlight" text="CURRENT" justifyH="CENTER">
									<Anchors>
										<Anchor point="TOPLEFT" x="5" y="-5"/>
										<Anchor point="RIGHT" x="-5" y="0"/>
									</Anchors>
								</FontString>
								
								<!-- Upgrade Level Display -->
								<FontString name="$parent_Level" inherits="GameFontNormal" justifyH="LEFT">
									<Anchors>
										<Anchor point="TOPLEFT" x="5" y="-25"/>
										<Anchor point="RIGHT" x="-5" y="0"/>
									</Anchors>
								</FontString>
								
								<!-- Stats Text -->
								<FontString name="$parent_StatsText" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP">
									<Anchors>
										<Anchor point="TOPLEFT" x="5" y="-50"/>
										<Anchor point="BOTTOMRIGHT" x="-5" y="5"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
					</Frame>
					
					<!-- Upgraded Stats Panel (Right) -->
					<Frame name="$parent_UpgradedPanel">
						<Anchors>
							<Anchor point="TOPLEFT" relativeKey="$parent_ComparisonContainer" relativePoint="TOP" x="3" y="-5"/>
							<Anchor point="BOTTOMRIGHT" x="-5" y="5"/>
						</Anchors>
						<Layers>
							<Layer level="OVERLAY">
								<!-- Header -->
								<FontString name="$parent_Title" inherits="GameFontGreen" text="UPGRADED" justifyH="CENTER">
									<Anchors>
										<Anchor point="TOPLEFT" x="5" y="-5"/>
										<Anchor point="RIGHT" x="-5" y="0"/>
									</Anchors>
								</FontString>
								
								<!-- Upgrade Level Display -->
								<FontString name="$parent_Level" inherits="GameFontNormal" justifyH="LEFT">
									<Anchors>
										<Anchor point="TOPLEFT" x="5" y="-25"/>
										<Anchor point="RIGHT" x="-5" y="0"/>
									</Anchors>
								</FontString>
								
								<!-- Stats Text -->
								<FontString name="$parent_StatsText" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP">
									<Anchors>
										<Anchor point="TOPLEFT" x="5" y="-50"/>
										<Anchor point="BOTTOMRIGHT" x="-5" y="5"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
					</Frame>
				</Frames>
			</Frame>
			
			<!-- Upgrade Controls -->
			<Frame name="$parent_ControlPanel">
				<Anchors>
					<Anchor point="TOPLEFT" x="15" y="-335"/>
					<Anchor point="TOPRIGHT" x="-15" y="-335"/>
				</Anchors>
				<Size y="70"/>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture>
							<Color r="0.1" g="0.1" b="0.1" a="0.5"/>
							<Anchors>
								<Anchor point="FILL" x="-3" y="2"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				
				<Frames>
					<!-- Upgrade Level Selector -->
					<Frame name="$parent_LevelSelector">
						<Anchors>
							<Anchor point="TOPLEFT" x="5" y="-5"/>
							<Anchor point="RIGHT" x="-5" y="0"/>
						</Anchors>
						<Size y="25"/>
						<Layers>
							<Layer level="OVERLAY">
								<FontString name="$parent_Label" inherits="GameFontNormal" text="Upgrade to Level:" justifyH="LEFT">
									<Anchors>
										<Anchor point="LEFT" x="5" y="0"/>
									</Anchors>
								</FontString>
								
								<ComboBox name="$parent_Dropdown" inherits="UIDropDownMenuTemplate">
									<Anchors>
										<Anchor point="LEFT" relativeTo="$parent_Label" relativePoint="RIGHT" x="10" y="0"/>
									</Anchors>
									<Size x="100" y="32"/>
								</ComboBox>
							</Layer>
						</Layers>
					</Frame>
					
					<!-- Cost Display -->
					<Frame name="$parent_CostDisplay">
						<Anchors>
							<Anchor point="TOPLEFT" x="5" y="-35"/>
							<Anchor point="RIGHT" x="-5" y="0"/>
						</Anchors>
						<Size y="30"/>
						<Layers>
							<Layer level="OVERLAY">
								<FontString name="$parent_CostLabel" inherits="GameFontHighlight" text="Cost:" justifyH="LEFT">
									<Anchors>
										<Anchor point="LEFT" x="5" y="0"/>
									</Anchors>
								</FontString>
								
								<!-- Token Cost -->
								<Texture name="$parent_TokenIcon" file="Interface\Icons\INV_Misc_Coin_01">
									<Anchors>
										<Anchor point="LEFT" relativeTo="$parent_CostLabel" relativePoint="RIGHT" x="20" y="3"/>
									</Anchors>
									<Size x="16" y="16"/>
								</Texture>
								
								<FontString name="$parent_TokenAmount" inherits="GameFontNormal" justifyH="LEFT">
									<Anchors>
										<Anchor point="LEFT" relativeTo="$parent_TokenIcon" relativePoint="RIGHT" x="5" y="0"/>
									</Anchors>
								</FontString>
								
								<!-- Essence Cost -->
								<Texture name="$parent_EssenceIcon" file="Interface\Icons\INV_Archaeology_70_PurpleHaze">
									<Anchors>
										<Anchor point="LEFT" relativeTo="$parent_TokenAmount" relativePoint="RIGHT" x="20" y="3"/>
									</Anchors>
									<Size x="16" y="16"/>
								</Texture>
								
								<FontString name="$parent_EssenceAmount" inherits="GameFontNormal" justifyH="LEFT">
									<Anchors>
										<Anchor point="LEFT" relativeTo="$parent_EssenceIcon" relativePoint="RIGHT" x="5" y="0"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
					</Frame>
				</Frames>
			</Frame>
			
			<!-- Player Currency Display -->
			<Frame name="$parent_CurrencyPanel">
				<Anchors>
					<Anchor point="TOPLEFT" x="15" y="-415"/>
					<Anchor point="TOPRIGHT" x="-15" y="-415"/>
				</Anchors>
				<Size y="50"/>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture>
							<Color r="0.05" g="0.05" b="0.05" a="0.8"/>
							<Anchors>
								<Anchor point="FILL" x="-3" y="2"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<!-- Tokens -->
						<Texture name="$parent_TokenIcon" file="Interface\Icons\INV_Misc_Coin_01">
							<Anchors>
								<Anchor point="TOPLEFT" x="10" y="-5"/>
							</Anchors>
							<Size x="32" y="32"/>
						</Texture>
						
						<FontString name="$parent_TokenLabel" inherits="GameFontNormal" text="Tokens:" justifyH="LEFT">
							<Anchors>
								<Anchor point="LEFT" relativeTo="$parent_TokenIcon" relativePoint="RIGHT" x="10" y="8"/>
							</Anchors>
						</FontString>
						
						<FontString name="$parent_TokenAmount" inherits="GameFontHighlight" justifyH="LEFT">
							<Anchors>
								<Anchor point="LEFT" relativeTo="$parent_TokenLabel" relativePoint="RIGHT" x="5" y="0"/>
							</Anchors>
						</FontString>
						
						<!-- Essence -->
						<Texture name="$parent_EssenceIcon" file="Interface\Icons\INV_Archaeology_70_PurpleHaze">
							<Anchors>
								<Anchor point="LEFT" relativeTo="$parent_TokenAmount" relativePoint="RIGHT" x="40" y="2"/>
							</Anchors>
							<Size x="32" y="32"/>
						</Texture>
						
						<FontString name="$parent_EssenceLabel" inherits="GameFontNormal" text="Essence:" justifyH="LEFT">
							<Anchors>
								<Anchor point="LEFT" relativeTo="$parent_EssenceIcon" relativePoint="RIGHT" x="10" y="8"/>
							</Anchors>
						</FontString>
						
						<FontString name="$parent_EssenceAmount" inherits="GameFontHighlight" justifyH="LEFT">
							<Anchors>
								<Anchor point="LEFT" relativeTo="$parent_EssenceLabel" relativePoint="RIGHT" x="5" y="0"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			
			<!-- Action Buttons -->
			<Button name="$parent_UpgradeButton" inherits="UIPanelButtonTemplate">
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="15" y="15"/>
					<Anchor point="BOTTOMRIGHT" x="-15" y="15"/>
				</Anchors>
				<Size y="35"/>
				<Layers>
					<Layer level="OVERLAY">
						<FontString inherits="GameFontNormal" text="UPGRADE">
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Button>
		</Frames>
		
		<!-- Scripts -->
		<Scripts>
			<OnLoad function="DarkChaos_ItemUpgrade_OnLoad"/>
			<OnShow function="DarkChaos_ItemUpgrade_OnShow"/>
			<OnHide function="DarkChaos_ItemUpgrade_OnHide"/>
			<OnEvent function="DarkChaos_ItemUpgrade_OnEvent"/>
		</Scripts>
	</Frame>
</Ui>

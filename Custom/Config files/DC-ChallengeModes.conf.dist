#                     CSV format: "level1:achievementId,level2:achievementId"
#                     Example: "60:10001,80:10002"
#
ChallengeMode.Hardcore.AchievementReward = "60:10020,80:10021,255:10022"
ChallengeMode.IronMan.AchievementReward = "60:10030,255:10031"

# -------------------------------------------------------------------------
# Confirmation and Safety
# -------------------------------------------------------------------------

#
#    ChallengeMode.RequireConfirmation
#        Description: Show confirmation dialog before activating challenge mode
#                     Uses two-stage gossip system (select â†’ explain â†’ confirm/cancel)
#        Default:     1 (Enabled - confirmation required)
#                     0 (Disabled - instant activation)
#
ChallengeMode.RequireConfirmation = 1

#
#    ChallengeMode.AllowDeactivation
#        Description: Allow players to deactivate challenge modes
#                     WARNING: Enabling this removes the challenge!
#        Default:     0 (Disabled - modes are permanent)
#                     1 (Enabled - players can deactivate)
#
ChallengeMode.AllowDeactivation = 0

#
#    ChallengeMode.MinLevel
#        Description: Minimum level required to activate challenge modes
#                     Prevents new players from accidentally activating.
#        Default:     1 (no restriction)
#        Range:       1 - 255
#
ChallengeMode.MinLevel = 1

#
#    ChallengeMode.MaxLevel
#        Description: Maximum level allowed to activate challenge modes
#                     Set to 255 to allow activation at any level.
#        Default:     10 (can only activate during early leveling)
#        Range:       1 - 255
#
ChallengeMode.MaxLevel = 10



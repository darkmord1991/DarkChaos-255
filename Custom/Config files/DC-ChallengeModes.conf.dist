# -------------------------------------------------------------------------
# Reward Configuration
# -------------------------------------------------------------------------

#
#    ChallengeMode.TalentRewards
#        Description: Extra talent points granted at milestone levels
#                     CSV format per mode: "level1:talents,level2:talents"
#                     Example: "20:1,40:2,60:3" (1 point at 20, 2 at 40, 3 at 60)
#        Note:        Set per mode using mode name prefix
#
ChallengeMode.Hardcore.TalentReward = "20:1,40:2,60:3,80:4,255:5"
ChallengeMode.SemiHardcore.TalentReward = "40:1,80:2"
ChallengeMode.IronMan.TalentReward = "30:1,60:2,255:3"

#
#    ChallengeMode.ItemRewards
#        Description: Item rewards granted at milestone levels
#                     CSV format: "level1:itemId:count,level2:itemId:count"
#                     Example: "60:49623:10,80:49623:20"
#
ChallengeMode.Hardcore.ItemReward = "60:49623:10,80:49623:25,255:49623:50"
ChallengeMode.SemiHardcore.ItemReward = "60:49623:5,80:49623:10"
ChallengeMode.IronMan.ItemReward = "60:49623:15,255:49623:30"

#
#    ChallengeMode.AchievementRewards

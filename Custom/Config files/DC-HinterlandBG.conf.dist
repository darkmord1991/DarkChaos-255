# -------------------------------------------------------------------------
# Persistence and Lock System
# -------------------------------------------------------------------------

#
#    HinterlandBG.Persistence.Enabled
#        Description: Save/restore resources, timer, last winner, lock window across restarts
#                     Allows battles to persist through server restarts.
#        Default:     1 (Enabled - state persists)
#                     0 (Disabled - fresh start after restart)
#
HinterlandBG.Persistence.Enabled = 1

#
#    HinterlandBG.Lock.Enabled
#        Description: Enable lock window after a win
#                     Prevents immediate re-battles after a victory.
#        Default:     0 (Disabled - battles can restart immediately)
#                     1 (Enabled - enforce cooldown period)
#
HinterlandBG.Lock.Enabled = 0

#
#    HinterlandBG.Lock.Duration
#        Description: Lock duration in seconds (0 disables)
#                     How long to wait before allowing next battle.
#        Default:     0 (disabled)
#        Range:       0 - 7200 (up to 2 hours)
#
HinterlandBG.Lock.Duration = 0

#
#    HinterlandBG.Lock.Duration.Expiry
#        Description: Override lock duration for timer-expiry wins
#                     Allows different cooldowns based on victory type.
#        Default:     0 (use Lock.Duration)
#
HinterlandBG.Lock.Duration.Expiry = 0

#
#    HinterlandBG.Lock.Duration.Depletion
#        Description: Override lock duration when a team depletes the opponent
#                     Allows different cooldowns based on victory type.
#        Default:     0 (use Lock.Duration)
#
HinterlandBG.Lock.Duration.Depletion = 0

# -------------------------------------------------------------------------
# Season Tracking
# -------------------------------------------------------------------------

#
#    HinterlandBG.Season
#        Description: Track season number for persistent stats
#                     Season resets allow for fresh leaderboards/statistics.
#                     Change this value to start a new season.
#        Default:     1
#        Range:       1 - 999
#
HinterlandBG.Season = 1

#
#    HinterlandBG.Stats.IncludeManual
#        Description: Include manual resets in statistics by default
#                     When disabled, GM-initiated resets don't count in stats.
#        Default:     1 (Enabled - count manual resets)
#                     0 (Disabled - exclude manual resets from stats)
#
HinterlandBG.Stats.IncludeManual = 1

# -------------------------------------------------------------------------
# Per-Kill Spell Feedback (Visual/Audio Effects)
# -------------------------------------------------------------------------

#
#    HinterlandBG.KillSpell.PlayerKillAlliance
#        Description: Spell cast on Alliance player killing a Horde player
#                     Used for visual/audio feedback (e.g., victory sound/animation).
#                     0 = disabled
#        Default:     0 (disabled)
#
HinterlandBG.KillSpell.PlayerKillAlliance = 0

#
#    HinterlandBG.KillSpell.PlayerKillHorde
#        Description: Spell cast on Horde player killing an Alliance player
#                     0 = disabled
#        Default:     0 (disabled)
#
HinterlandBG.KillSpell.PlayerKillHorde = 0

#
#    HinterlandBG.KillSpell.NpcKill
#        Description: Spell cast when killing a configured NPC
#                     0 = disabled
#        Default:     0 (disabled)
#
HinterlandBG.KillSpell.NpcKill = 0

# -------------------------------------------------------------------------
# Affix System (Weather-Based Gameplay Modifiers)
# -------------------------------------------------------------------------

#
#    HinterlandBG.Affix.Enabled
#        Description: Enable the affix system (zone-wide buffs/debuffs with weather)
#                     Affixes rotate periodically and change gameplay mechanics.
#        Default:     0 (Disabled - no affixes)
#                     1 (Enabled - affixes active)
#
HinterlandBG.Affix.Enabled = 0

#
#    HinterlandBG.Affix.WeatherEnabled
#        Description: Enable weather effects tied to affixes
#                     When enabled, each affix also changes the zone weather.
#        Default:     0 (Disabled - affixes without weather)
#                     1 (Enabled - affixes change weather)
#
HinterlandBG.Affix.WeatherEnabled = 0

#
#    HinterlandBG.Affix.Period
#        Description: Seconds between affix rotations
#                     How often affixes change during battle.
#        Default:     600 (10 minutes)
#        Range:       60 - 3600 (1 minute to 1 hour)
#
HinterlandBG.Affix.Period = 600

#
#    Legacy Affix Spells (Deprecated - use per-affix arrays below)
#        Description: These settings are deprecated. Use the per-affix
#                     PlayerSpell/NpcSpell arrays instead for better control.
#
HinterlandBG.Affix.Spell.Haste = 0
HinterlandBG.Affix.Spell.Slow = 0
HinterlandBG.Affix.Spell.ReducedHealing = 0
HinterlandBG.Affix.Spell.ReducedArmor = 0
HinterlandBG.Affix.Spell.BossEnrage = 0
HinterlandBG.Affix.Spell.BadWeatherNpcBuff = 0

#
#    HinterlandBG.Affix.RandomOnBattleStart
#        Description: Shuffle affixes when the battle starts
#                     Ensures variety across battles.
#        Default:     1 (Enabled - random affix at start)
#                     0 (Disabled - start with no affix or fixed affix)
#
HinterlandBG.Affix.RandomOnBattleStart = 1

#
#    HinterlandBG.Affix.Announce
#        Description: Broadcast affix changes to players in zone
#                     Example: "Affix changed to Sunlight! Players gain 10% haste!"
#        Default:     0 (Disabled - silent affix changes)
#                     1 (Enabled - announce affix changes)
#
HinterlandBG.Affix.Announce = 0

#
#    HinterlandBG.Affix.WorldstateEnabled
#        Description: Update affix state in worldstates for UI integrations
#                     Allows client addons to read current affix via worldstate.
#        Default:     0 (Disabled - no worldstate updates)
#                     1 (Enabled - send affix to worldstate)
#
HinterlandBG.Affix.WorldstateEnabled = 0


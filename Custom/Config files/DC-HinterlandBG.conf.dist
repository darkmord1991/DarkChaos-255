# -------------------------------------------------------------------------
# Rewards - Match End
# -------------------------------------------------------------------------

#
#    HinterlandBG.Reward.MatchHonor
#        Description: Legacy total honor amount (may be used by legacy paths)
#                     This setting is deprecated in favor of specific reward types below.
#        Default:     50
#
HinterlandBG.Reward.MatchHonor = 50

#
#    HinterlandBG.Reward.MatchHonorDepletion
#        Description: Winner honor when opponent reaches 0 resources (resource victory)
#                     This is the "decisive victory" reward.
#        Default:     120
#        Range:       0 - 1000
#
HinterlandBG.Reward.MatchHonorDepletion = 120

#
#    HinterlandBG.Reward.MatchHonorTiebreaker
#        Description: Winner honor when win is by timer expiry/tiebreaker
#                     This is the "time victory" reward (typically lower than depletion).
#        Default:     70
#        Range:       0 - 1000
#
HinterlandBG.Reward.MatchHonorTiebreaker = 70

#
#    HinterlandBG.Reward.MatchHonorLoser
#        Description: Consolation honor for the losing team
#                     Participation reward to prevent zero rewards for losers.
#        Default:     20
#        Range:       0 - 500
#
HinterlandBG.Reward.MatchHonorLoser = 20

# -------------------------------------------------------------------------
# Rewards - Player Kills
# -------------------------------------------------------------------------

#
#    HinterlandBG.Reward.KillItemId
#        Description: Item granted on player kill (0 to disable)
#                     Example: 40752 = Emblem of Heroism
#        Default:     40752
#
HinterlandBG.Reward.KillItemId = 40752

#
#    HinterlandBG.Reward.KillItemCount
#        Description: Number of items to grant per player kill
#        Default:     1
#        Range:       1 - 100
#
HinterlandBG.Reward.KillItemCount = 1

#
#    HinterlandBG.Reward.KillHonorValues
#        Description: CSV list for random honor per kill
#                     Format: "value1,value2,value3,value4"
#                     System randomly picks one value from this list for each kill.
#        Default:     "17,11,19,22"
#
HinterlandBG.Reward.KillHonorValues = "17,11,19,22"

# -------------------------------------------------------------------------
# Resource Loss Configuration
# -------------------------------------------------------------------------

#
#    HinterlandBG.ResourcesLoss.PlayerKill

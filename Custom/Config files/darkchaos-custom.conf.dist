###############################################################################
#
#  SECTION 22: MAP PARTITIONING SYSTEM
#
#  Advanced grid partitioning system for splitting large maps into sub-grids
#  to improve performance and handle higher player counts.
#
#  Layering is Blizzard-style: map-wide (continent-wide), not per-zone.
#  Players stay on the same layer across all zones of a map.
#  Zone changes do NOT trigger layer reassignment.
#
###############################################################################

#
#    MapPartitions.Enabled
#        Description: Enable map partitioning system.
#        Default:     0 - (Disabled)
#                     1 - (Enabled)
#
MapPartitions.Enabled = 1

#
#    MapPartitions.Maps
#        Description: Comma-separated list of map IDs to partition.
#                     Recommended maps for partitioning:
#                       0   - Eastern Kingdoms (Stormwind, Ironforge, etc.)
#                       1   - Kalimdor (Orgrimmar, Thunder Bluff, etc.)
#                       530 - Outland (Shattrath, etc.)
#                       571 - Northrend (Dalaran, etc.)
#                     Note: Instanced maps (dungeons/raids) should NOT be partitioned.
#        Default:     "" (none - disabled)
#        Recommended: "0,1,530,571,745,1405"
#
MapPartitions.Maps = "0,1,530,571,745,1405,37"

#
#    MapPartitions.DefaultCount
#        Description: Default number of partitions per map when enabled.
#        Default:     4
#
MapPartitions.DefaultCount = 4

#
#    MapPartitions.TileBased.Enabled
#        Description: Enable tile-based partition sizing using extracted .map tiles.
#                     When enabled, partition count is derived from tile count
#                     (unless a PartitionOverrides entry exists for the map).
#        Default:     0 - (Disabled)
#                     1 - (Enabled)
#
MapPartitions.TileBased.Enabled = 1

#
#    MapPartitions.TileBased.TilesPerPartition
#        Description: Target number of tiles per partition (ADT-based sizing).
#                     Partition count = ceil(tileCount / tilesPerPartition).
#        Default:     64  (8x8 ADTs per partition)
#
MapPartitions.TileBased.TilesPerPartition = 16

#
#    MapPartitions.TileBased.MinPartitions
#        Description: Minimum number of partitions per map when tile-based sizing is enabled.
#        Default:     1
#
MapPartitions.TileBased.MinPartitions = 1

#
#    MapPartitions.TileBased.MaxPartitions
#        Description: Maximum number of partitions per map when tile-based sizing is enabled.
#        Default:     16
#
MapPartitions.TileBased.MaxPartitions = 8

#
#    MapPartitions.TileBased.TilesPerPartitionOverrides
#        Description: Per-map overrides for tiles-per-partition.
#                     Format: "mapId:tilesPerPartition,mapId:tilesPerPartition"
#        Example:     "0:32,1:32,530:64,571:32"
#        Default:     ""
#
MapPartitions.TileBased.TilesPerPartitionOverrides = ""

#
#    MapPartitions.TileBased.PartitionOverrides
#        Description: Explicit per-map partition count overrides.
#                     Format: "mapId:count,mapId:count". Takes priority over
#                     tile-based sizing and DefaultCount.
#        Example:     "0:9,1:9,530:4,571:9"
#        Default:     ""
#
MapPartitions.TileBased.PartitionOverrides = "745:2,1405:2"

#
#    MapPartitions.BorderOverlap
#        Description: Overlap distance (yards) shared between adjacent partitions.
#        Default:     100.0
#
MapPartitions.BorderOverlap = 100.0

#
#    MapPartitions.ExcludeZones
#        Description: Comma-separated list of zone IDs to exclude from partitioning.
#                     Excluded zones will be treated as single monolithic partitions.
#                     Useful for high-density areas (cities) to avoid boundary issues.
#        Recommended: "1519,1637,4395,3703" (Stormwind, Orgrimmar, Dalaran, Shattrath)
#        Default:     "1519,1637,4395,3703"
#
MapPartitions.ExcludeZones = "1519,1637,4395,3703"

#
#    MapPartitions.UsePartitionStoreOnly
#        Description: Store partitioned objects only in per-partition stores (advanced).
#        Default:     0 - (Disabled, keep global store)
#                     1 - (Enabled)
#
MapPartitions.UsePartitionStoreOnly = 0

#
#    MapPartitions.Layers.Enabled
#        Description: Enable Blizzard-style map-wide layering for high-population maps.
#                     When enabled, entire maps (continents) can be split into
#                     multiple "layers" that share the same world space but
#                     isolate players. Layers are continent-wide: a player on
#                     Layer 2 stays on Layer 2 across all zones of that map.
#        Default:     0 - (Disabled)
#                     1 - (Enabled)
#
MapPartitions.Layers.Enabled = 1

#
#    MapPartitions.Layers.Capacity
#        Description: Maximum players per layer before creating a new layer.
#                     Only used when layering is enabled.
#        Default:     100
#
MapPartitions.Layers.Capacity = 100

#
#    MapPartitions.Layers.CapacityOverrides
#        Description: Per-map (continent) capacity overrides.
#                     Comma-separated list of mapId:capacity pairs.
#                     Maps not listed here use the global Layers.Capacity value.
#                     Useful for setting different thresholds per continent:
#                       0 = Eastern Kingdoms, 1 = Kalimdor,
#                       530 = Outland, 571 = Northrend
#        Example:     "0:150,1:200,530:100,571:250"
#        Default:     "" (empty  all maps use global capacity)
#
MapPartitions.Layers.CapacityOverrides = ""

#
#    MapPartitions.Layers.Max
#        Description: Maximum number of layers allowed per map (continent).
#                     New layers are created only when a player joins a map
#                     and all existing layers are at capacity.
#                     Set to 0 to disable layer creation (forces single layer).
#        Default:     4
#
MapPartitions.Layers.Max = 4

#
#    MapPartitions.Layers.IncludeNPCs
#        Description: If enabled, NPCs are distributed across layers for complete isolation.
#                     Each layer becomes an independent world copy (like retail WoW layering).
#                     World spawns are duplicated per layer, pets/guardians sync to owner's layer.
#        Default:     1 - (Enabled, true layer isolation)
#                     0 - (Disabled, NPCs visible across all layers)
#
MapPartitions.Layers.IncludeNPCs = 1

#
#    MapPartitions.Layers.IncludeGameObjects
#        Description: If enabled, GameObjects (resource nodes, chests, quest objects, etc.) are
#                     distributed across layers for complete isolation, mirroring NPC layering.
#                     Player-spawned GOs follow the owner's layer. Static world GOs are
#                     deterministically distributed via spawn-ID hashing.
#                     Transports (ships, zeppelins, elevators) are always visible on all layers.
#        Default:     1 - (Enabled, true layer isolation)
#                     0 - (Disabled, GameObjects visible across all layers)
#
MapPartitions.Layers.IncludeGameObjects = 1

#
#    MapPartitions.Layers.SkipClonesIfNoPlayers
#        Description: If enabled, clone spawns for layers > 0 are skipped when a map has no players.
#                     Base layer (0) spawns still load as normal.
#        Default:     1 - (Enabled)
#                     0 - (Disabled)
#
MapPartitions.Layers.SkipClonesIfNoPlayers = 1

#
#    MapPartitions.Layers.EmitPerLayerCloneMetrics
#        Description: Emit per-layer clone spawn metrics (ms + count) for NPCs/GOs.
#                     Summary logs still emit when diagnostics are enabled.
#        Default:     0 - (Disabled)
#                     1 - (Enabled)
#
MapPartitions.Layers.EmitPerLayerCloneMetrics = 0

#
#    MapPartitions.Layers.LazyCloneLoading
#        Description: Load layer clones only when a player of that layer enters a grid.
#                     Reduces initial clone fan-out for high layer counts.
#                     Base layer (0) still loads normally.
#        Default:     1 - (Enabled)
#                     0 - (Disabled, load all layer clones on grid load)
#
MapPartitions.Layers.LazyCloneLoading = 1

#
#    MapPartitions.DensitySplitThreshold
#        Description: Density score (players + creatures/10) to trigger partition splitting.
#                     Resizing is throttled to avoid churn.
#        Default:     50.0
#
MapPartitions.DensitySplitThreshold = 50.0

#
#    MapPartitions.DensityMergeThreshold
#        Description: Density score below which partitions may merge.
#                     Merge occurs only if all partitions are below the threshold.
#        Default:     5.0
#
MapPartitions.DensityMergeThreshold = 5.0

# -----------------------------------------------------------------------------
# Phase 2: Spatial Hashing for Boundaries
# -----------------------------------------------------------------------------

#
#    MapPartitions.SpatialHash.Enabled
#        Description: Enable spatial hash grid for O(1) boundary object lookups.
#                     Replaces O(N) iteration with cell-based spatial hashing.
#        Default:     1 - (Enabled)
#                     0 - (Disabled, use legacy iteration)
#
MapPartitions.SpatialHash.Enabled = 1

#
#    MapPartitions.SpatialHash.CellSize
#        Description: Size in yards of each spatial hash grid cell.
#                     Smaller cells = more granular, but more memory overhead.
#        Default:     100 (yards)
#
MapPartitions.SpatialHash.CellSize = 100

# -----------------------------------------------------------------------------
# Phase 6: Layer Rebalancing
# -----------------------------------------------------------------------------

#
#    MapPartitions.Layers.Rebalancing.Enabled
#        Description: Enable automatic layer rebalancing to consolidate sparse layers.
#                     When enabled, layers with too few players are merged periodically.
#        Default:     1 - (Enabled)
#                     0 - (Disabled)
#
MapPartitions.Layers.Rebalancing.Enabled = 1

#
#    MapPartitions.Layers.Rebalancing.CheckIntervalMs
#        Description: Interval (milliseconds) between rebalancing checks per map.
#                     Each map is checked independently via LayerManager::Update().
#        Default:     300000 (5 minutes)
#
MapPartitions.Layers.Rebalancing.CheckIntervalMs = 300000

#
#    MapPartitions.Layers.Rebalancing.MinPlayersPerLayer
#        Description: Minimum players required to keep a layer alive.
#                     Layers below this threshold are candidates for consolidation.
#        Default:     5
#
MapPartitions.Layers.Rebalancing.MinPlayersPerLayer = 5

#
#    MapPartitions.Layers.Rebalancing.ImbalanceThreshold
#        Description: Coefficient of variation threshold (0.0-1.0) to trigger rebalancing.
#                     Higher values = more tolerance for imbalanced layers.
#        Default:     0.3 (30% coefficient of variation)
#
MapPartitions.Layers.Rebalancing.ImbalanceThreshold = 0.3

#
#    MapPartitions.Layers.Rebalancing.MigrationBatchSize
#        Description: Maximum players to migrate per rebalancing cycle.
#                     Lower values = smoother migration, higher values = faster consolidation.
#        Default:     10
#
MapPartitions.Layers.Rebalancing.MigrationBatchSize = 10

# -----------------------------------------------------------------------------
# Phase 7: Hysteresis (Layer Creation / Destruction Delays)
# -----------------------------------------------------------------------------

#
#    MapPartitions.Layers.Hysteresis.CreationWarmupMs
#        Description: Warm-up delay (milliseconds) before creating a new layer.
#                     When all layers are at capacity the system starts a timer.
#                     A new layer is created only if the condition persists for
#                     this entire duration, preventing brief population spikes
#                     from spawning unnecessary layers.
#                     Set to 0 to disable (create layers instantly).
#        Default:     60000 (1 minute)
#
MapPartitions.Layers.Hysteresis.CreationWarmupMs = 60000

#
#    MapPartitions.Layers.Hysteresis.DestructionCooldownMs
#        Description: Cooldown delay (milliseconds) before destroying (merging) layers.
#                     When the total population on a map drops below a single layer's
#                     capacity, the system waits this long before consolidating.
#                     This prevents rapid create/destroy oscillation on population
#                     boundaries (e.g., players logging off and on around capacity).
#                     Set to 0 to disable (merge layers instantly).
#        Default:     120000 (2 minutes)
#
MapPartitions.Layers.Hysteresis.DestructionCooldownMs = 120000

# -----------------------------------------------------------------------------
# Phase 8: Soft Transfers
# -----------------------------------------------------------------------------

#
#    MapPartitions.Layers.SoftTransfers.Enabled
#        Description: Queue rebalancing layer moves for the next loading screen
#                     (teleport, map change) instead of instant hard-switches.
#                     When enabled, players receive a chat notification and are
#                     moved only during their next natural loading screen.
#                     If the player doesn't trigger a loading screen within the
#                     timeout, the transfer is forced.
#                     When disabled, rebalancing moves players instantly (legacy).
#        Default:     1 - (Enabled)
#                     0 - (Disabled, instant transfers)
#
MapPartitions.Layers.SoftTransfers.Enabled = 1

#
#    MapPartitions.Layers.SoftTransfers.TimeoutMs
#        Description: Maximum time (milliseconds) a soft transfer can remain pending
#                     before being forced. If a player doesn't hit a loading screen
#                     within this window, the transfer is applied instantly.
#        Default:     600000 (10 minutes)
#
MapPartitions.Layers.SoftTransfers.TimeoutMs = 600000


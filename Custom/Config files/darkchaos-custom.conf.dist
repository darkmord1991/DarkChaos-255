###########################################################################
#
#    ITEM UPGRADE SYSTEM - DETAILED CONFIGURATION
#
#    Advanced item progression system allowing players to upgrade Epic and
#    Legendary items with currency-based mechanics. Includes artifact mastery
#    progression, seasonal competition, achievements, and guild tracking.
#
#    Phases Implemented:
#    - Phase 4A: Core system (15 levels, ilvl scaling, dual currency)
#    - Phase 4B: Progression (artifact mastery, tier unlocks, weekly caps)
#    - Phase 4C: Seasonal (seasons, leaderboards, history tracking)
#    - Phase 4D: Advanced (respec, achievements, guild progression)
#
#    NPCs:
#    - Curator (600007): Information, guides, progression tracking
#    - Vendor (600006): Token exchange, catalog, upgrades
#
###########################################################################

# -------------------------------------------------------------------------
# Master Configuration
# -------------------------------------------------------------------------

#
#    ItemUpgrade.Enable
#        Description: Master toggle for the Item Upgrade system
#        Default:     1 (Enabled)
#                     0 (Disabled - all upgrade NPCs and commands inactive)
#
ItemUpgrade.Enable = 1

#
#    ItemUpgrade.MaxUpgradeLevel
#        Description: Maximum upgrade level for items
#                     Each level adds +4 item levels to the base item.
#        Default:     15 (max +60 item levels)
#        Range:       1 - 20
#        Note:        Database tables default to 15; higher values require DB schema updates
#
ItemUpgrade.MaxUpgradeLevel = 15

#
#    ItemUpgrade.DebugToSay
#        Description: Send debug messages to player via Say channel
#                     Useful for troubleshooting addon communication.
#                     When enabled, outputs detailed protocol messages.
#        Default:     0 (Disabled)
#                     1 (Enabled - debug messages visible in chat)
#
ItemUpgrade.DebugToSay = 0

# -------------------------------------------------------------------------
# Currency & Cost Configuration
# -------------------------------------------------------------------------
# NOTE: By default, Item Upgrade uses its OWN currency (Upgrade Tokens/Essence)
#       which is SEPARATE from the seasonal currency. This is intentional:
#       - Seasonal currency = earned from activities, time-limited
#       - Upgrade currency = earned from boss kills, persistent
#
#       If you want Item Upgrade to use seasonal currency instead, set:
#         ItemUpgrade.Currency.UseSeasonalCurrency = 1
#       This will read DarkChaos.Seasonal.TokenItemID/EssenceItemID
# -------------------------------------------------------------------------

#
#    ItemUpgrade.Currency.UseSeasonalCurrency
#        Description: Use the canonical seasonal currency for item upgrades
#                     When enabled, ignores EssenceId/TokenId below and uses
#                     DarkChaos.Seasonal.TokenItemID and DarkChaos.Seasonal.EssenceItemID
#        Default:     0 (Disabled - use dedicated upgrade currency)
#                     1 (Enabled - share seasonal currency)
#
ItemUpgrade.Currency.UseSeasonalCurrency = 0

#
#    ItemUpgrade.Currency.EssenceId
#        Description: Item ID for Upgrade Essence (Item Upgrade specific currency)
#                     Only used when UseSeasonalCurrency = 0
#        Default:     300312 (Custom item: Upgrade Essence)
#        Range:       Any valid item_template entry
#
ItemUpgrade.Currency.EssenceId = 300312

#
#    ItemUpgrade.Currency.TokenId
#        Description: Item ID for Upgrade Tokens (Item Upgrade specific currency)
#                     Only used when UseSeasonalCurrency = 0
#        Default:     300311 (Custom item: Upgrade Token)
#        Range:       Any valid item_template entry
#
ItemUpgrade.Currency.TokenId = 300311

#
#    ItemUpgrade.Cost.BaseCostEssence
#        Description: Base essence cost for upgrading Epic items (level 1→2)
#                     Costs scale exponentially with each level.
#        Default:     500
#        Range:       10 - 10000
#
ItemUpgrade.Cost.BaseCostEssence = 500

#
#    ItemUpgrade.Cost.BaseCostTokens
#        Description: Base token cost for upgrading Epic items (level 1→2)
#        Default:     250
#        Range:       5 - 5000
#
ItemUpgrade.Cost.BaseCostTokens = 250

#
#    ItemUpgrade.Cost.LegendaryMultiplier
#        Description: Multiplier for Legendary item upgrade costs
#                     Legendary items cost this much more than Epic items.
#        Default:     1.5 (50% more expensive)
#        Range:       1.0 - 5.0
#
ItemUpgrade.Cost.LegendaryMultiplier = 1.5

#
#    ItemUpgrade.Cost.ScalingExponent
#        Description: Exponent for cost scaling per level
#                     Higher values make higher levels exponentially more expensive.
#                     Formula: baseCost * (level ^ exponent)
#        Default:     1.35
#        Range:       1.0 - 2.0
#
ItemUpgrade.Cost.ScalingExponent = 1.35


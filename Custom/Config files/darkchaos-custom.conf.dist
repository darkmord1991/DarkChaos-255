#
AoELoot.Extensions.QualityFilter.MaxQuality = 6

#
#    AoELoot.Extensions.QualityFilter.AutoVendorPoor
#        Description: [PLAYER OVERRIDABLE] Default auto-vendor poor items setting
#        Default:     0 (Disabled)
#
AoELoot.Extensions.QualityFilter.AutoVendorPoor = 0

#
#    AoELoot.Extensions.Profession.AutoSkin
#        Description: [PLAYER OVERRIDABLE] Default auto-skin setting
#        Default:     1 (Enabled)
#
AoELoot.Extensions.Profession.AutoSkin = 1

#
#    AoELoot.Extensions.Profession.AutoMine
#        Description: Server default for auto-mining ore deposits
#        Default:     1 (Enabled)
#
AoELoot.Extensions.Profession.AutoMine = 1

#
#    AoELoot.Extensions.Profession.AutoHerb
#        Description: Server default for auto-herbing nodes
#        Default:     1 (Enabled)
#
AoELoot.Extensions.Profession.AutoHerb = 1

#
#    AoELoot.Extensions.Profession.Range
#        Description: Range for auto-profession gathering
#        Default:     10.0
#
AoELoot.Extensions.Profession.Range = 10.0

#
#    AoELoot.Extensions.SmartLoot.PreferCurrentSpec
#        Description: Prioritize items usable by current spec
#        Default:     1 (Enabled)
#
AoELoot.Extensions.SmartLoot.PreferCurrentSpec = 1

#
#    AoELoot.Extensions.SmartLoot.PreferEquippable
#        Description: Prioritize equippable items
#        Default:     1 (Enabled)
#
AoELoot.Extensions.SmartLoot.PreferEquippable = 1

#
#    AoELoot.Extensions.SmartLoot.PrioritizeUpgrades
#        Description: Highlight items that are upgrades for the player
#        Default:     1 (Enabled)

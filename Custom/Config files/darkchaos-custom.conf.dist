###########################################################################
#
#    SECTION 1: AOE LOOT SYSTEM
#
#    Allows players to collect loot from multiple nearby corpses with a
#    single interaction. Includes DC Extensions for quality filtering,
#    profession integration, and Mythic+ bonuses.
#
###########################################################################

#
#    AoELoot.Enable
#        Description: Master toggle for the AoE Loot system
#        Default:     1 (Enabled)
#
AoELoot.Enable = 1

#
#    AoELoot.Range
#        Description: Maximum range (in yards) to collect loot from nearby corpses
#        Default:     30.0
#
AoELoot.Range = 30.0

#
#    AoELoot.MaxCorpses
#        Description: Maximum number of corpses to include in a single AoE loot operation
#        Default:     10
#
AoELoot.MaxCorpses = 10

#
#    AoELoot.ShowMessage
#        Description: GLOBAL toggle for AoE loot info messages
#        Default:     1 (Enabled)
#
AoELoot.ShowMessage = 1

#
#    AoELoot.AutoLoot
#        Description: Controls automatic looting behavior
#        Default:     2 (Respect player's AutoLoot setting)
#
AoELoot.AutoLoot = 2

#
#    AoELoot.DebugPerCorpse
#        Description: Enable debug logging for each corpse looted
#        Default:     0 (Disabled)
#
AoELoot.DebugPerCorpse = 0

#
#    AoELoot.AllowInGroup
#        Description: Allow AoE looting while in a group or raid
#        Default:     1 (Enabled)
#
AoELoot.AllowInGroup = 1

#
#    AoELoot.QuestItems
#        Description: Include quest items in AoE loot collection
#        Default:     1 (Enabled)
#
AoELoot.QuestItems = 1

#
#    AoELoot.IgnoreTapped
#        Description: Skip corpses that are tapped by other players/groups
#        Default:     1 (Enabled)
#
AoELoot.IgnoreTapped = 1

#
#    AoELoot.PlayersOnly
#        Description: Only allow players to use AoE loot (not NPCs/pets)
#        Default:     1 (Enabled)
#
AoELoot.PlayersOnly = 1

#
#    AoELoot.AutoStoreWindowSeconds
#        Description: Time window to consider autostore "recent"
#        Default:     5
#
AoELoot.AutoStoreWindowSeconds = 5

#
#    AoELoot.MaxMergeSlots
#        Description: Maximum number of item slots to merge into the client's loot window
#        Default:     15
#
AoELoot.MaxMergeSlots = 15

#
#    AoELoot.AutoCreditGold
#        Description: Automatically credit gold when solo
#        Default:     1 (Enabled)
#
AoELoot.AutoCreditGold = 1

# -------------------------------------------------------------------------
# DC AoE Loot Extensions

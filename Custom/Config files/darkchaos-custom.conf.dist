###########################################################################
#
#    SECTION 1: AOE LOOT SYSTEM
#
#    Allows players to collect loot from multiple nearby corpses with a
#    single interaction, significantly improving gameplay flow in areas
#    with high mob density.
#
#    DC Extensions add: quality filtering, profession integration (auto-skin,
#    auto-mine, auto-herb), smart loot preferences, and Mythic+ bonuses.
#
#    NOTE: Several settings can be overridden per-player via the DC-AOESettings
#    addon or .lootpref/.aoeloot commands. These settings serve as SERVER DEFAULTS.
#
###########################################################################

#
#    AoELoot.Enable
#        Description: Master toggle for the AoE Loot system
#        Default:     1 (Enabled)
#                     0 (Disabled - players loot corpses individually)
#
AoELoot.Enable = 1

#
#    AoELoot.Range
#        Description: Maximum range (in yards) to collect loot from nearby corpses
#                     When a player loots one corpse, all lootable corpses within
#                     this range are included in the AoE loot operation.
#        Default:     30.0
#        Range:       5.0 - 100.0 (values below 5 are clamped, above 100 may cause issues)
#
AoELoot.Range = 30.0

#
#    AoELoot.MaxCorpses
#        Description: Maximum number of corpses to include in a single AoE loot operation
#                     Prevents server lag from looting excessive numbers of corpses.
#                     Even if 50 corpses are in range, only this many will be looted.
#        Default:     10
#        Range:       1 - 50 (higher values increase server load)
#
AoELoot.MaxCorpses = 10

#
#    AoELoot.ShowMessage
#        Description: GLOBAL toggle for AoE loot info messages (login, merge results)
#                     When disabled globally, NO players see messages.
#                     When enabled, players can INDIVIDUALLY disable via addon/command.
#                     
#                     Per-player toggle: .aoeloot messages or .lp messages
#        Default:     1 (Enabled - players see messages unless they disable)
#                     0 (Disabled - no players see messages)
#
AoELoot.ShowMessage = 1

#
#    AoELoot.AutoLoot
#        Description: Controls automatic looting behavior
#        Default:     2 (Respect player's AutoLoot setting)
#        Options:     0 = Always open loot windows (never auto-loot)
#                     1 = Force auto-loot all corpses (bypass client setting)
#                     2 = Respect player's client AutoLoot setting
#
AoELoot.AutoLoot = 2

#
#    AoELoot.DebugPerCorpse
#        Description: Enable debug logging for each corpse looted in AoE loot
#                     Shows detailed per-corpse contribution in server logs.
#                     ADMIN ONLY - this generates LOG_INFO output.
#        Default:     0 (Disabled - no debug output)
#                     1 (Enabled - log each corpse looted)
#
AoELoot.DebugPerCorpse = 0

#
#    AoELoot.AllowInGroup
#        Description: Allow AoE looting while in a group or raid
#                     When disabled, AoE loot only works for solo players.
#        Default:     1 (Enabled - works in groups/raids)
#                     0 (Disabled - solo only)
#
AoELoot.AllowInGroup = 1

#
#    AoELoot.QuestItems
#        Description: Include quest items in AoE loot collection
#                     When disabled, quest items remain on their original corpse.
#        Default:     1 (Enabled - quest items are collected)
#                     0 (Disabled - quest items excluded from AoE loot)
#
AoELoot.QuestItems = 1

#
#    AoELoot.IgnoreTapped
#        Description: Skip corpses that are tapped by other players/groups
#                     Prevents looting corpses that belong to other players.
#        Default:     1 (Enabled - skip tapped corpses)
#                     0 (Disabled - attempt to loot all corpses regardless of tap)
#
AoELoot.IgnoreTapped = 1

#
#    AoELoot.PlayersOnly
#        Description: Only allow players to use AoE loot (not NPCs/pets)
#                     Prevents exploits with pet/NPC looting.
#        Default:     1 (Enabled - players only)
#                     0 (Disabled - NPCs and pets can trigger AoE loot)
#
AoELoot.PlayersOnly = 1

#
#    AoELoot.AutoStoreWindowSeconds
#        Description: Number of seconds after the client sends an autostore packet
#                     where we consider autostore "recent". Only used when AoELoot.AutoLoot = 2
#                     This helps detect if the player has auto-loot enabled client-side.
#        Default:     5
#        Range:       1 - 30 (higher values are more lenient for laggy connections)
#
AoELoot.AutoStoreWindowSeconds = 5

#
#    AoELoot.MaxMergeSlots
#        Description: Maximum number of item slots to merge into the client's loot window
#                     WoW 3.3.5a clients have a 16-slot loot window. This setting prevents
#                     overflow by limiting merged items. Excess items are skipped.
#        Default:     15 (leaves one spare slot)
#        Range:       1 - 16 (setting to 16 may cause client issues)
#
AoELoot.MaxMergeSlots = 15

#
#    AoELoot.AutoCreditGold
#        Description: When enabled, merged gold from nearby corpses is automatically
#                     credited to the looter when they are solo (not in a group).
#                     When disabled, gold remains in the loot window for normal
#                     group/master-loot handling.
#        Default:     1 (Enabled - auto-credit gold when solo)
#                     0 (Disabled - gold stays in loot window)
#
AoELoot.AutoCreditGold = 1

# -------------------------------------------------------------------------
# DC AoE Loot Extensions
# -------------------------------------------------------------------------
# These DC-specific features extend the base AoE Loot system with quality
# filtering, profession integration, smart loot preferences, and M+ bonuses.
#
# IMPORTANT: Many of these settings serve as SERVER DEFAULTS. Players can
# override them individually using:
#   - DC-AOESettings addon (Interface → AddOns → DC AoE Loot)
#   - Commands: .lootpref <option> or .lp <option>
#
# Per-Player Overridable Settings (marked with [PLAYER]):
#   - MinQuality (.lp quality <0-6>)
#   - AutoSkin (.lp skin)
#   - AutoVendorPoor (via addon)
#   - SmartLoot (.lp smart)
#   - ShowMessages (.lp messages or .aoeloot messages)
#
# Server-Only Settings (NOT player overridable):
#   - Extensions.Enable (master toggle)
#   - MaxQuality (server enforced maximum)
#   - All Mythic+ settings
#   - All Raid settings
#   - Profession.Range
#   - TrackDetailedStats
# -------------------------------------------------------------------------

#
#    AoELoot.Extensions.Enable
#        Description: Master toggle for AoE Loot Extensions
#                     When disabled, all extension features are off for ALL players.
#        Default:     1 (Enabled)
#
AoELoot.Extensions.Enable = 1


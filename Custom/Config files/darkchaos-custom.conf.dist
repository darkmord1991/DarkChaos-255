###########################################################################
#
#    SECTION 17: CROSS-SYSTEM INTEGRATION FRAMEWORK
#
#    Provides unified coordination between all DarkChaos-255 custom systems:
#    - EventBus: Publish/subscribe events across systems (boss kills, level ups, etc.)
#    - SessionContext: Track active contexts per player (Mythic+ run, BG, arena, etc.)
#    - RewardDistributor: Unified reward distribution with multiplier stacking
#    - Cross-System Multipliers: Bonus rewards when systems interact
#
#    Integrated Systems:
#    - Mythic+ Dungeon System (run states, completion bonuses)
#    - Seasonal Reward System (token awards, season bonuses)
#    - Item Upgrade System (upgrade completion triggers)
#    - Prestige System (prestige multipliers, tier unlocks)
#    - Hinterland BG (PvP context, rating bonuses)
#    - AOE Loot (context-aware loot bonuses)
#
#    Database Tables (aggregation, not replacement):
#    - dc_cross_system_events: Event log for all cross-system events
#    - dc_player_cross_system_stats: Per-player aggregated statistics
#    - dc_cross_system_config: Runtime config overrides
#    - dc_cross_system_multipliers: Active multiplier definitions
#    - dc_cross_system_achievement_triggers: Achievement completion triggers
#
###########################################################################

# -------------------------------------------------------------------------
# Core Settings
# -------------------------------------------------------------------------

#
#    DC.CrossSystem.Enable
#        Description: Master toggle for Cross-System Integration Framework
#                     When disabled, all cross-system features are bypassed.
#                     Individual systems continue to work independently.
#        Default:     1 (Enabled)
#
DC.CrossSystem.Enable = 1

#
#    DC.CrossSystem.Debug
#        Description: Enable debug logging for cross-system operations
#                     Logs all events, context changes, and reward distributions.
#                     WARNING: Very verbose in active environments!
#        Default:     0 (Disabled)
#
DC.CrossSystem.Debug = 0

# -------------------------------------------------------------------------
# EventBus Configuration
# -------------------------------------------------------------------------

#
#    DC.CrossSystem.EventBus.Enable
#        Description: Enable the EventBus for cross-system event publishing
#                     When disabled, systems cannot notify each other of events.
#        Default:     1 (Enabled)
#
DC.CrossSystem.EventBus.Enable = 1

#
#    DC.CrossSystem.EventBus.LogEvents
#        Description: Log all events to dc_cross_system_events table
#                     Useful for debugging and analytics.
#                     Set to 0 in production to reduce database writes.
#        Default:     1 (Enabled)
#
DC.CrossSystem.EventBus.LogEvents = 1

#
#    DC.CrossSystem.EventBus.RetentionDays
#        Description: Days to retain event logs in database
#                     Events older than this are auto-deleted by scheduled task.
#        Default:     30
#        Range:       7 - 365
#
DC.CrossSystem.EventBus.RetentionDays = 30

#
#    DC.CrossSystem.EventBus.MaxEventsPerSecond
#        Description: Maximum events processed per second (rate limiting)
#                     Prevents event storms from impacting server performance.
#        Default:     1000
#        Range:       100 - 10000
#
DC.CrossSystem.EventBus.MaxEventsPerSecond = 1000

# -------------------------------------------------------------------------
# SessionContext Configuration
# -------------------------------------------------------------------------

#
#    DC.CrossSystem.SessionContext.Enable
#        Description: Enable session context tracking per player
#                     Tracks active contexts (Mythic+ run, BG, arena, etc.)
#                     Required for context-aware multipliers and rewards.
#        Default:     1 (Enabled)
#
DC.CrossSystem.SessionContext.Enable = 1

#
#    DC.CrossSystem.SessionContext.MaxContextsPerPlayer
#        Description: Maximum concurrent contexts per player
#                     Normally 1-2 (e.g., Mythic+ run + seasonal event)
#        Default:     5
#        Range:       1 - 10
#
DC.CrossSystem.SessionContext.MaxContextsPerPlayer = 5

#
#    DC.CrossSystem.SessionContext.PersistOnLogout
#        Description: Persist session contexts when player logs out
#                     When enabled, contexts are restored on re-login.
#                     Useful for Mythic+ runs that can be resumed.
#        Default:     1 (Enabled)
#
DC.CrossSystem.SessionContext.PersistOnLogout = 1

# -------------------------------------------------------------------------
# RewardDistributor Configuration
# -------------------------------------------------------------------------

#
#    DC.CrossSystem.Rewards.Enable
#        Description: Enable unified reward distribution system
#                     When disabled, systems distribute rewards independently
#                     without multiplier stacking.
#        Default:     1 (Enabled)
#
DC.CrossSystem.Rewards.Enable = 1

#
#    DC.CrossSystem.Rewards.StackMultipliers
#        Description: Allow multipliers from multiple systems to stack
#                     Example: Mythic+ bonus * Seasonal bonus * Prestige bonus
#                     When disabled, only the highest multiplier applies.
#        Default:     1 (Enabled - multiplicative stacking)
#
DC.CrossSystem.Rewards.StackMultipliers = 1

#
#    DC.CrossSystem.Rewards.MaxMultiplier
#        Description: Maximum total multiplier cap
#                     Prevents excessive rewards from multiplier stacking.
#                     Final rewards = base * min(total_multiplier, this_cap)
#        Default:     10.0 (1000% max bonus)
#        Range:       1.0 - 50.0
#
DC.CrossSystem.Rewards.MaxMultiplier = 10.0

#
#    DC.CrossSystem.Rewards.LogDistributions
#        Description: Log all reward distributions to database
#                     Stored in dc_player_cross_system_stats table.
#        Default:     1 (Enabled)
#
DC.CrossSystem.Rewards.LogDistributions = 1

# -------------------------------------------------------------------------
# System-Specific Multiplier Caps
# -------------------------------------------------------------------------

#
#    DC.CrossSystem.Multiplier.MythicPlus.Max
#        Description: Maximum multiplier from Mythic+ system
#                     Higher key levels provide higher bonuses up to this cap.
#        Default:     3.0 (300% max from M+)
#
DC.CrossSystem.Multiplier.MythicPlus.Max = 3.0

#
#    DC.CrossSystem.Multiplier.Seasonal.Max
#        Description: Maximum multiplier from Seasonal system
#                     Active season events can boost rewards up to this cap.
#        Default:     2.0 (200% max from seasonal)
#
DC.CrossSystem.Multiplier.Seasonal.Max = 2.0

#
#    DC.CrossSystem.Multiplier.Prestige.Max
#        Description: Maximum multiplier from Prestige system
#                     Higher prestige levels provide bonuses up to this cap.
#        Default:     2.5 (250% max from prestige)
#
DC.CrossSystem.Multiplier.Prestige.Max = 2.5

#
#    DC.CrossSystem.Multiplier.HinterlandBG.Max
#        Description: Maximum multiplier from Hinterland BG
#                     BG rating and performance provide bonuses up to this cap.
#        Default:     1.5 (150% max from HLBG)
#
DC.CrossSystem.Multiplier.HinterlandBG.Max = 1.5

# -------------------------------------------------------------------------
# Cross-System Achievement Triggers
# -------------------------------------------------------------------------

# DC.Achievements.* (server-side achievements system)
DC.Achievements.Enable = 1
DC.Achievements.Debug = 0

#
#    DC.CrossSystem.Achievements.Enable
#        Description: Enable cross-system achievement triggers
#                     Achievements can be triggered by combinations of events
#                     from multiple systems (e.g., "Complete M+15 during a season event")
#        Default:     1 (Enabled)
#
DC.CrossSystem.Achievements.Enable = 1

#
#    DC.CrossSystem.Achievements.AnnounceWorld
#        Description: Announce cross-system achievements to all players
#                     When enabled, special achievements are announced server-wide.
#        Default:     1 (Enabled)
#
DC.CrossSystem.Achievements.AnnounceWorld = 1

# -------------------------------------------------------------------------
# Statistics Aggregation
# -------------------------------------------------------------------------

#
#    DC.CrossSystem.Stats.Enable
#        Description: Enable statistics aggregation across systems
#                     Aggregates player stats from all integrated systems
#                     into dc_player_cross_system_stats table.
#        Default:     1 (Enabled)
#
DC.CrossSystem.Stats.Enable = 1

#
#    DC.CrossSystem.Stats.UpdateIntervalSeconds
#        Description: How often to update aggregated statistics (seconds)
#                     Lower values = more current stats but more DB writes.
#        Default:     300 (5 minutes)
#        Range:       60 - 3600
#
DC.CrossSystem.Stats.UpdateIntervalSeconds = 300


